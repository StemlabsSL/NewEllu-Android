<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_7sdp"
    android:paddingEnd="@dimen/_7sdp">


    <FrameLayout
        android:id="@+id/rlReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/light_gray_curve"
            android:elevation="@dimen/_5sdp"
            android:minWidth="@dimen/_100sdp"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <com.stemlabs.ellu.widgets.RoundRectCornerImageView
                android:id="@+id/imgChatReceive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/llAudioReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgPlayReceive"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/play_white_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatSeekBar
                            android:id="@+id/seekbarAudioReceive"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:thumbTint="@color/colorFFD600" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTimeAudioReceive"
                                style="@style/lbl12GrayMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:text="0:15"
                                android:textColor="@color/color606060"
                                android:textSize="@dimen/_10ssp" />

                            <TextView
                                android:id="@+id/tvTimeReceiveAudio"
                                style="@style/lbl12GrayMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="12:35 PM"
                                android:textColor="@color/color606060"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvMessageReceive"
                style="@style/lbl12BlackMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modify on the My Orders page. You will not be able to modify your order if it has already been shipped. In case of cancelling prepaid orders , we will email you the details about your refund once we process your cancellation."
                android:textAlignment="viewStart"
                android:textColor="@color/color1E2021" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfileReceive"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/circle_blue_gradiun"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserNameReceive"
                        style="@style/lbl12GrayMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTimeReceive"
                        style="@style/lbl12GrayMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 days Ago"
                        android:textColor="@color/color606060"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/imgReceiveArrow"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_8sdp"
            android:rotation="270"

            android:src="@drawable/ic_arrow"
            android:tint="@color/colorF3F2F2" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/rlSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/light_blue_curve"
            android:elevation="@dimen/_5sdp"
            android:minWidth="@dimen/_100sdp"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">


            <com.stemlabs.ellu.widgets.RoundRectCornerImageView
                android:id="@+id/imgChatSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvMessageSend"
                style="@style/lbl12BlackMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modify on the My Orders page. You will not be able to modify your order if it has already been shipped. In case of cancelling prepaid orders , we will email you the details about your refund once we process your cancellation."
                android:textAlignment="viewStart"
                android:textColor="@color/color1E2021"
                android:visibility="visible" />


            <LinearLayout
                android:id="@+id/llAudioSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgPlaySend"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_play_blue" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seekbarAudioSend"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/colorFFD600" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvTimeAudioSend"
                    style="@style/lbl12GrayMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:text="0:15"
                    android:textColor="@color/color606060"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUserNameSend"
                        style="@style/lbl12BlackMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTimeSend"
                        style="@style/lbl12GrayMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 days Ago"
                        android:textColor="@color/color606060"
                        android:textSize="@dimen/_10ssp" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgSeenSend"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_tick"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:rotation="90"


            android:src="@drawable/ic_arrow"
            android:tint="@color/colorD8F1FF" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/llAwareMeetView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/meet_chat_bg"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgAwareMeetIcon"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_more_black"
            android:tint="@color/white" />


        <TextView
            android:id="@+id/tvAwareMeetTitle"
            style="@style/lbl12WhiteRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Meeting in 15 Minutes"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgMap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_below="@+id/llAwareMeetView"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_chat_map"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llProximityView"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/curve_proximity_gradient"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_women_sample_two" />

            <TextView
                android:id="@+id/tvProximityMessage"
                style="@style/lbl12WhiteRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:text="Angelina has sent a Proximity invitation to the group"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <TextView
            style="@style/lbl12WhiteMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:text="12:35 PM"
            android:textSize="@dimen/_8ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/lbl12WhiteMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:padding="@dimen/_8sdp"
                android:text="Decline"
                android:textSize="@dimen/_11ssp" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

            <TextView
                android:id="@+id/tvAcceptProximity"
                style="@style/lbl12WhiteMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:padding="@dimen/_8sdp"
                android:text="Accept"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llContact"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_36sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/light_gray_curve"
        android:elevation="@dimen/_5sdp"
        android:minWidth="@dimen/_100sdp"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_37sdp"
                android:elevation="@dimen/_3sdp"
                android:src="@drawable/ic_women_sample_two" />

            <TextView
                style="@style/lbl14PrimaryBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_7sdp"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:text="Angelina"

                />

        </LinearLayout>

        <TextView
            style="@style/lbl12BlackMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_11sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:text="12:35 PM"
            android:textSize="@dimen/_10ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/colorD5D5D5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/lbl12PrimaryMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:padding="@dimen/_8sdp"
                android:text="Message"
                android:textSize="@dimen/_11ssp" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/colorD5D5D5" />

            <TextView
                android:id="@+id/tvAddContact"
                style="@style/lbl12PrimaryMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:padding="@dimen/_8sdp"
                android:text="Add Contact"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>