<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.component.loginflow.IntroFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/llSignUp"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/half_right_rectangle"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp">


                    <TextView
                        style="@style/lbl16WhiteBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="end"
                        android:text="New Here?"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />


                    <TextView
                        style="@style/lbl16WhiteRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="end"

                        android:text="Start your" />

                    <TextView
                        style="@style/lbl16WhiteBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="end"
                        android:text="Ellu"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/lbl16WhiteRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:text="journey\ntoday!" />

                    <ImageView
                        android:id="@+id/imgSignUpArrow"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_140sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_arrow_left_white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSignIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:background="@drawable/half_start_rectangle"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_11sdp">

                    <TextView
                        style="@style/lbl16WhiteBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Welcome Back!"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/lbl16WhiteBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Sign In"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/lbl16WhiteRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="start"
                        android:text="to your\nAccount\nhere!" />


                    <ImageView
                        android:id="@+id/imgSignInArrow"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:padding="@dimen/_6sdp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_white" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>