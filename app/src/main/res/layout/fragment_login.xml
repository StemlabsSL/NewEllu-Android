<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.component.loginflow.LoginFragment">

    <LinearLayout
        android:id="@+id/LL_Login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_270sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/bg_gradient_signin"
        android:orientation="vertical"
        android:paddingStart="@dimen/_25sdp"
        android:paddingTop="@dimen/_25sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:paddingBottom="@dimen/_10sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBackArrow"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_arrow_left_white" />

            <TextView
                android:id="@+id/tvSignIn"
                style="@style/lblToolbarWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Sign In"
                android:textSize="@dimen/_18ssp" />

        </FrameLayout>

        <EditText
            android:id="@+id/Et_Email_LOGIN"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/raleway_medium"
            android:hint="Email" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ET_password_Login"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:hint="Password"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/imgPasswordVisibilityLogin"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_5sdp"

                android:layout_marginBottom="@dimen/_10sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/eyeoff" />


        </FrameLayout>

        <TextView
            android:id="@+id/tvForgotpassworsd"
            style="@style/lbl12WhiteRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/raleway_regular"

            android:paddingBottom="@dimen/_3sdp"
            android:text="Forgot Password?"
            android:textSize="@dimen/_11sdp" />


        <ImageView
            android:id="@+id/imgSignIn"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_next_white_badge_green_arrow" />


    </LinearLayout>


</LinearLayout>