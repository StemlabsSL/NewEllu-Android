<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFBFBFB"
    android:orientation="vertical"
    tools:context=".ui.component.aboutband.fragment.ResetBandFragment">

    <include layout="@layout/noraml_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            style="@style/lbl12GrayMedium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="Your band will be reset to its default settings except the security, language, and accounts settings.\nAny customizations you have made to your band, such as your vibration pattern and vibration intensity, will be discarded. Your personal data and the settings of the app will not be affected."
            android:textColor="@color/color575555" />


        <TextView
            android:id="@+id/tvResetBandLBL"
            style="@style/btnGradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="RESET BAND" />


    </LinearLayout>
</LinearLayout>