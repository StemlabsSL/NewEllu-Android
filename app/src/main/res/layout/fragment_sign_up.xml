<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:id="@+id/LL_Layout"
    tools:context=".ui.component.loginflow.LoginFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_270sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/bg_gradient_signup"
            android:orientation="vertical"
            android:paddingStart="@dimen/_25sdp"
            android:paddingTop="@dimen/_25sdp"
            android:paddingEnd="@dimen/_25sdp"
            android:paddingBottom="@dimen/_10sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBackArrow"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_left_white" />

                <TextView
                    android:id="@+id/tvSignUpToolbar"
                    style="@style/lblToolbarWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_18ssp"
                    android:text="Sign Up" />

            </FrameLayout>

            <EditText
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:id="@+id/ET_name"
                android:hint="Full Name"
                android:fontFamily="@font/raleway_medium"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="textPersonName" />

            <EditText
                style="@style/editText"
                android:id="@+id/ET_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:fontFamily="@font/raleway_medium"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="textEmailAddress" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:fontFamily="@font/raleway_medium"
                    android:id="@+id/ET_password"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/imgPasswordVisibility"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/eyeoff" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:id="@+id/ET_confirm_password"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/raleway_medium"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/imggConfirmPasswordVisibility"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end|bottom"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/eyeoff" />


            </FrameLayout>


            <ImageView
                android:id="@+id/imgSignUP"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:src="@drawable/ic_next_white_badge_green_arrow" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgGoogle"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_gmail_black" />

        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_fb_black" />

    </LinearLayout>-->
</LinearLayout>