<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LL_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.component.loginflow.LoginFragment">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_270sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/bg_gradient_signup"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingStart="@dimen/_25sdp"
        android:paddingTop="@dimen/_25sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:paddingBottom="@dimen/_10sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBackArrow"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_arrow_left_white" />

            <TextView
                android:id="@+id/tvVerifyTitle"
                style="@style/lblToolbarWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Verify"
                android:textSize="@dimen/_17sdp" />

        </FrameLayout>


        <TextView
            style="@style/lbl12WhiteRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/raleway_medium"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="Please Enter Verification Code" />


        <com.stemlabs.ellu.utils.CustomOtpView
            android:id="@+id/otpView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"

            android:inputType="number"
            android:orientation="horizontal"
            app:otp_gravity="center"
            app:otp_maxLength="1"

            app:otp_textColor="@color/white"
            app:otp_textSize="@dimen/_19ssp" />


        <TextView
            android:id="@+id/Resend_otp"
            style="@style/lbl12WhiteRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="Resend Code" />

        <ImageView
            android:id="@+id/imgVerifyOTPHere"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_9sdp"

            android:src="@drawable/ic_next_white_badge_green_arrow" />


    </LinearLayout>


</LinearLayout>