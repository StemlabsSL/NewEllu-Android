<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.component.chat.fragment.VideoCallFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_video_call_user" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gradient_video" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfileUser"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:src="@drawable/ic_video_call_user" />

    <TextView
        android:id="@+id/tvUserName"
        style="@style/lblToolbarWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProfileUser"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:text="Jane Doe"
        android:textSize="@dimen/_20ssp" />

    <TextView
        android:id="@+id/tvCallInProgressLBL"
        style="@style/lbl12WhiteRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="Call In Progress"
        android:textSize="@dimen/_14ssp" />

    <ImageView
        android:id="@+id/imgLeftIcon"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_arrow_left_white" />


    <ImageView
        android:id="@+id/imgVideoCallUser"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/img_video_curve_user"
        android:layout_above="@+id/llCallAction"
        android:visibility="visible"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:id="@+id/llCallAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_curve_primary_solid"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <TextView
            android:id="@+id/tvTimer"
            style="@style/lblToolbarWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProfileUser"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="00:02:25"
            android:textSize="@dimen/_14ssp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_mute_call_white_bg" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_add_person_call_white_bg" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_cancel_call_red_bg" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_speaker_call_white_bg" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_more_call_white_bg" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>