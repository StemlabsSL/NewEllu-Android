<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/curve_primary_white"
    android:elevation="@dimen/_10sdp"
    android:orientation="vertical"
    android:paddingTop="@dimen/_17sdp"
    android:paddingBottom="@dimen/_17sdp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llLocation"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/ic_location_yellow_badge" />

                    <TextView
                        style="@style/lbl12BlackRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLetMeet"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/ic_meet_red_badge" />

                    <TextView
                        style="@style/lbl12BlackRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Let's Meet" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAware"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/ic_flag_orange_badge" />

                    <TextView
                        style="@style/lbl12BlackRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aware" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llGallery"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/ic_gallary_menu" />

                    <TextView
                        style="@style/lbl12BlackRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llContact"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/ic_contact_yellow_badge" />

                    <TextView
                        style="@style/lbl12BlackRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCamera"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/ic_camera_pink_badge" />

                    <TextView
                        style="@style/lbl12BlackRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFiles"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgFiles"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/ic_folder_blue_badge" />

                    <TextView
                        android:id="@+id/tvFiles"
                        style="@style/lbl12BlackRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Files" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>