<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_22sdp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgContactPersonProfile"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/sample1" />


        <TextView
            android:id="@+id/tvContactPersonName"
            style="@style/lbl14BlackBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_12ssp"
            android:text="Andrew james" />


        <ImageView
            android:id="@+id/imgRadioButton"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_gravity="center"
            android:elevation="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ring_shape_gradient_story"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:elevation="@dimen/_2sdp"
            android:src="@drawable/ic_notification_white_green_badge"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tvSOSLBL"
            style="@style/lbl12WhiteBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:background="@drawable/bg_gradient_sos"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="SOS"
            android:textSize="@dimen/_5ssp"
            android:visibility="visible" />


    </LinearLayout>


    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorE1E1E1" />

</LinearLayout>