<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/rlReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_36sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/light_gray_curve"
            android:elevation="@dimen/_5sdp"
            android:minWidth="@dimen/_100sdp"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:visibility="gone">

            <com.stemlabs.ellu.widgets.RoundRectCornerImageView
                android:id="@+id/imgChatReceive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/llAudioReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgPlayReceive"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_play_blue" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seekbarAudioReceive"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/colorFFD600" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvTimeAudioReceive"
                    style="@style/lbl12GrayMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:text="0:15"
                    android:textColor="@color/color606060"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMessageReceive"
                style="@style/lbl12BlackMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modify on the My Orders page. You will not be able to modify your order if it has already been shipped. In case of cancelling prepaid orders , we will email you the details about your refund once we process your cancellation."
                android:textAlignment="viewStart"
                android:textColor="@color/color1E2021" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfileReceive"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/circle_blue_gradiun"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserNameReceive"
                        style="@style/lbl12GrayMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTimeReceive"
                        style="@style/lbl12GrayMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 days Ago"
                        android:textColor="@color/color606060"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/imgReceiveArrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_8sdp"
            android:rotation="90"
            android:src="@drawable/ic_ticket_arrow_white"
            android:visibility="gone"
            app:tint="@color/colorEB7D80" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/rlSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/ic_left_audio_sos2"
            android:elevation="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <com.stemlabs.ellu.widgets.RoundRectCornerImageView
                android:id="@+id/imgChatSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvMessageSend"
                style="@style/lbl12BlackMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modify on the My Orders page. You will not be able to modify your order if it has already been shipped. In case of cancelling prepaid orders , we will email you the details about your refund once we process your cancellation."
                android:textAlignment="viewStart"
                android:textColor="@color/color1E2021"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/llAudioSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imgPlaySend"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_play_sos" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.AppCompatSeekBar
                            android:id="@+id/seekbarAudioSend"
                            style="@style/seekbarWhite"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:backgroundTint="@color/colorWhite"
                            android:paddingStart="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_6sdp"
                            android:progress="100"
                            android:progressTint="@color/colorWhite"
                            android:splitTrack="false"
                            android:thumb="@drawable/ic_seekbar_thumb_primary"
                            android:thumbTint="@color/colorFFD600"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTimeAudioSend"
                                style="@style/lbl12GrayMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:text="0:15"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_10ssp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1" />

                            <TextView
                                style="@style/lbl12GrayMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end|bottom"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="10:25 AM"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUserNameSend"
                        style="@style/lbl12BlackMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTimeSend"
                        style="@style/lbl12GrayMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 days Ago"
                        android:textColor="@color/color606060"
                        android:textSize="@dimen/_10ssp" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgSeenSend"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_tick"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:rotation="270"
            android:src="@drawable/ic_arrow_ticket_blue"
            android:tint="@color/colorD8F1FF"
            android:visibility="gone" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/llAwareMeetView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/meet_chat_bg"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgAwareMeetIcon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_more_black"
            android:tint="@color/white" />


        <TextView
            android:id="@+id/tvAwareMeetTitle"
            style="@style/lbl12WhiteRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Meeting in 15 Minutes"
            android:textSize="@dimen/_9ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgMap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/map_img"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llProximityView"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/curve_proximity_gradient"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_women_sample_two" />

            <TextView
                style="@style/lbl12WhiteRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:text="Angelina has sent a Proximity invitation to the group"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

        <TextView
            style="@style/lbl12WhiteMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_5sdp"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:text="12:35 PM"
            android:textSize="@dimen/_10ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/lbl12WhiteMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:padding="@dimen/_8sdp"
                android:text="Decline"
                android:textSize="@dimen/_8ssp" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

            <TextView
                android:id="@+id/tvAcceptProximity"
                style="@style/lbl12WhiteMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:padding="@dimen/_8sdp"
                android:text="Accept"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>